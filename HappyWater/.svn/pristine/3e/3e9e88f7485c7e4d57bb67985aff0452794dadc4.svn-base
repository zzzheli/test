.copy {
    position: fixed;
    top: 0;
    left: 0;
    width: 750px;
    height: 100%;
    background-color: #d7a85e;
    display: -webkit-box;
    display: -ms-flexbox;
    display: flex;
    flex-direction: column;
    -webkit-box-align: center;
    -ms-flex-align: center;
    align-items: center;
    -webkit-box-pack: center;
    -ms-flex-pack: center;
    justify-content: center;
    z-index: 100;
}
.copy text{
    padding-top: 40px;
}