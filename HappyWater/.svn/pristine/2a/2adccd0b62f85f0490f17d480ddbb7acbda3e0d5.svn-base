<div class="addCard_step2 sub_page">
    <div class="module">
        <div class="page_header">
            <i class="fa fa-chevron-left back_page" onclick="history.go(-1)"></i>
            <span onclick="history.go(-1)">填写银行卡信息</span>
        </div>
        <form name="addCardForm" novalidate>
            <ul class="verify_list">
                <li class="verify_item">
                    <span>卡类型：</span>
                    <span ng-bind="vm.cardType | cardType"></span>
                </li>
                <li class="verify_item">
                    <span class="flex-none">手机号：</span>
                    <input type="text"
                           class="form-control font-size-normal"
                           placeholder="请输入银行预留手机号" autocomplete="off"
                           onkeyup="this.value=this.value.replace(/\D/g,'')"
                           onafterpaste="this.value=this.value.replace(/\D/g,'')"
                           ng-minlength="11"
                           maxlength="11"
                           ng-model="vm.userPhone"
                           required>
                </li>
                <li class="agreement">
                    <label class="margin_0">
                        <input type="checkbox" id="agreement" class="agreeCheckbox" required>
                        <span>我已阅读并同意</span>
                    </label>
                    <a ui-sref="payment">《支付服务协议》</a>
                </li>
                <li class="padding_0">
                    <button class="next_step complete_verify"
                            ng-disabled="addCardForm.$invalid"
                            ng-click="vm.agreeProtocol()">同意协议并绑卡</button>
                </li>
            </ul>
        </form>
    </div>
</div>