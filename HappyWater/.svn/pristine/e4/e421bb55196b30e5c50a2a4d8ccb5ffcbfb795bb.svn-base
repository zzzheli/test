<div class="role">
    <div class="search">
        <form>
            <div class="container">
                <div class="row">
                    <div class="col-lg-10 col-md-12">
                        <div class="col-lg-12">
                            <div class="col-md-6 col-xs-12 search-items">
                                <div class="col-md-4 col-xs-3 search-item">角色ID：</div>
                                <div class="col-md-8 col-xs-9">
                                    <input type="text"
                                           class="form-control"
                                           ng-model="vm.roleId">
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12 search-items">
                                <div class="col-md-4 col-xs-3 search-item">角色名：</div>
                                <div class="col-md-8 col-xs-9">
                                    <input type="text"
                                           class="form-control"
                                           ng-model="vm.roleName">
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="col-md-6 col-xs-12 search-items">
                                <div class="col-md-4 col-xs-3 search-item">创建人：</div>
                                <div class="col-md-8 col-xs-9">
                                    <input type="text"
                                           class="form-control"
                                           ng-model="vm.creator">
                                </div>
                            </div>
                            <div class="col-md-6 col-xs-12 search-items">
                                <div class="col-md-4 col-xs-3 search-item">更新人：</div>
                                <div class="col-md-8 col-xs-9">
                                    <input type="text"
                                           class="form-control"
                                           ng-model="vm.updater">
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-2 col-md-12">
                        <div class="col-lg-12 col-xs-6 search-btn">
                            <button class="btn btn-default" ng-click="vm.reset()">重置</button>
                        </div>
                        <div class="col-lg-12 col-xs-6 search-btn">
                            <button class="btn btn-primary" ng-click="vm.search()">查询</button>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
    <div class="primary-list">
        <div class="list-title">
            <span class="list-title-text">角色列表</span>
            <button class="btn btn-default pull-right" ui-sref="home.newRole">新增</button>
        </div>
        <table class="table table-hover">
            <thead>
            <th>序号</th>
            <th>角色ID</th>
            <th>角色名</th>
            <th>创建人</th>
            <th>创建时间</th>
            <th>更新人</th>
            <th>更新时间</th>
            <th>操作</th>
            </thead>
            <tbody>
            <tr ng-repeat="x in vm.roleList">
                <td>{{$index + 1}}</td>
                <td>{{x.serialId}}</td>
                <td>{{x.roleName}}</td>
                <td>{{x.createdBy}}</td>
                <td>
                    <div>{{x.createdAt | date: 'yyyy-MM-dd'}}</div>
                    <div>{{x.createdAt | date: 'HH:mm:ss'}}</div>
                </td>
                <td>{{x.updatedBy}}</td>
                <td>
                    <div>{{x.updatedAt | date: 'yyyy-MM-dd'}}</div>
                    <div>{{x.updatedAt | date: 'HH:mm:ss'}}</div>
                </td>
                <td>
                    <button class="btn btn-primary" ng-click="vm.editRole(x.id)">编辑</button>
                    <button class="btn btn-danger" ng-click="vm.deleteRole(x.id)">删除</button>
                </td>
            </tr>
            </tbody>
        </table>
    </div>
    <pagination></pagination>
</div>
